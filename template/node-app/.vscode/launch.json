{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Init project",
      "program": "${workspaceFolder}/bin/index.js",
      "args": ["start"],
      "cwd": "${workspaceFolder}/app",
      "env": {
        "DEBUG": "towerflow:*"
      }
    },
    {
      "name": "Start dev",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/type-test/compiler.js",
      "args": ["test.ts"],
      "cwd": "${workspaceFolder}/src/type-test",
      "env": {
        "DEBUG": "towerflow:*"
      },
      "sourceMaps": true
    },
    {
      "name": "Launch Test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}\\dist\\src\\node_modules\\test\\test.js",
      "outFiles": ["${workspaceFolder}\\dist\\**\\*.js"],
      //  "preLaunchTask": "tsc: build - tsconfig.json",
      "sourceMaps": true,
      "args": ["init", "alice-project", "--template", "frontend-app"]
    },
    {
      "name": "Webpack debug",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/workflow-test/web-app/webpack-dev.js",
      "sourceMaps": true,
      "env": {
        "DEBUG": "towerflow:*"
      },
      "args": []
    },
    {
      "name": "TS dev debug",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/workflow-test/node-app/ts-dev.js",
      "sourceMaps": true,
      "autoAttachChildProcesses": true,
      "smartStep": true,
      "outputCapture": "std", // 解决显示到process.stdout.write的内容不显示的问题
      "env": {
        "DEBUG": "towerflow:*"
      },
      "args": []
    }
  ]
}
