  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost 8080",
      "url": "http://localhost:8080",
      "smartStep": true,
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "<node_internals>/**/*.js",
        "webpack/bootstrap"
      ],
      "webRoot": "${workspaceFolder}"
    }
  ]
}
