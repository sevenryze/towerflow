{
  "compilerOptions": {
    "module": "commonjs", // If you need to use `dynamic import` syntax, make sure to set this flag to "esnext".
    "moduleResolution": "node",
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "strict": true,
    "skipLibCheck": true,
    "alwaysStrict": true
  },
  "include": ["bin", "src", "typings"]
}
